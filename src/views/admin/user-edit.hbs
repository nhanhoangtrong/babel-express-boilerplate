{{!< admin }}

<div class="row">
	<div class="col-md-12 col-sm-12 col-xs-12">
		<div class="x_panel">
			<div class="x_title">
				<h2><i class="fa fa-align-left"></i> <a href="/admin/user/all">All Users</a> / {{title}}</h2>
				<div class="clearfix"></div>
			</div>
			<div class="x_content">
                <form id="edit-post-form" action="" method="post" data-parsley-validate="" class="form-horizontal form-label-left" novalidate="">
					<div class="form-group">
						<label class="control-label col-md-3 col-sm-3 col-xs-12" for="firstName">First Name <span class="required">*</span>
						</label>
						<div class="col-md-6 col-sm-6 col-xs-12">
							<input type="text" id="firstName" name="firstName" value="{{edittedUser.firstName}}"required="required" class="form-control col-md-7 col-xs-12">
						</div>
					</div>
					<div class="form-group">
						<label class="control-label col-md-3 col-sm-3 col-xs-12" for="lastName">Last Name <span class="required">*</span>
						</label>
						<div class="col-md-6 col-sm-6 col-xs-12">
							<input type="text" id="lastName" name="lastName" value="{{edittedUser.lastName}}" required="required" class="form-control col-md-7 col-xs-12">
						</div>
					</div>
					<div class="form-group">
						<label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12" for="email">Email <span class="required">*</span></label>
						<div class="col-md-6 col-sm-6 col-xs-12">
                            <input type="email" class="form-control col-md-7 col-xs-12" id="email" name="email" value="{{edittedUser.email}}" required="required">
						</div>
					</div>
					<div class="form-group">
						<label class="control-label col-md-3 col-sm-3 col-xs-12" for="password">Password</label>
						<div class="col-md-6 col-sm-6 col-xs-12">
							<input type="password" id="password" name="password" value="" class="form-control col-md-7 col-xs-12">
						</div>
					</div>
					<div class="form-group">
						<label class="control-label col-md-3 col-sm-3 col-xs-12" for="repassword">Re-password</label>
						<div class="col-md-6 col-sm-6 col-xs-12">
							<input type="password" id="repassword" name="repassword" value="" class="form-control col-md-7 col-xs-12">
						</div>
					</div>
                    <div class="form-group">
						<label class="control-label col-md-3 col-sm-3 col-xs-12" for="isAdmin">Set as Admin</label>
						<div class="col-md-6 col-sm-6 col-xs-12">
							<input type="checkbox" id="isAdmin" id="isAdmin" name="isAdmin" {{#if edittedUser.isAdmin}}checked{{/if}} hidden>
						</div>
					</div>
					<div class="form-group">
						<label class="control-label col-md-3 col-sm-3 col-xs-12" for="createdAt">Created At<span class="required">*</span>
						</label>
						<div class="col-md-6 col-sm-6 col-xs-12">
                            <div class="control-group">
                              <div class="controls">
                                <div class="input-prepend input-group">
                                  <span class="add-on input-group-addon"><i class="glyphicon glyphicon-calendar fa fa-calendar"></i></span>
                                  <input type="text" name="createdAt" id="createdAt" class="form-control" value="{{millisecondsToDate edittedUser.createdAt}}">
                                </div>
                              </div>
                            </div>
						</div>
					</div>
					<div class="ln_solid"></div>
					<div class="form-group">
						<div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
							<input id="_id" name="_id" value="{{edittedUser._id}}" type="text" hidden>
							<input id="_csrf" name="_csrf" value="{{_csrf}}" type="text" style="display: none;" hidden>
							<a href="/admin/post/all" class="btn btn-primary">Cancel</a>
							<button type="submit" class="btn btn-success">Submit</button>
						</div>
					</div>

				</form>
			</div>
		</div>
	</div>
</div>

{{#contentFor "pageScripts"}}
<script src="/static/admin/js/bootstrap-wysiwyg.min.js"></script>
<script src="/static/admin/js/jquery.hotkeys.js"></script>
<script src="/static/admin/js/prettify.min.js"></script>
<script src="/static/admin/js/jquery.tagsinput.js"></script>
<script src="/static/admin/js/switchery.min.js"></script>
<script src="/static/admin/js/select2.full.min.js"></script>
<script src="/static/admin/js/parsley.min.js"></script>
<script src="/static/admin/js/autosize.min.js"></script>
<script src="/static/admin/js/jquery.autocomplete.min.js"></script>
<script src="/static/admin/js/starrr.js"></script>
{{/contentFor}}

{{#contentFor "inlineScripts"}}
<script>
var isPublishedSelector = document.getElementById('isAdmin');
var switchery = new Switchery(isPublishedSelector, {
	color: '#26B99A'
});
$('#createdAt').daterangepicker({
    singleDatePicker: true,
    timePicker: true,
    locale: {
        format: 'MM/DD/YYYY h:mm A'
    }
});
</script>
{{/contentFor}}
