{{!< base }}

<div class="inner">
    <header>
        <h1>{{postCategory.name}}</h1>
        <p>{{postCategory.description}}</p>
    </header>

    <section class="box">
        <h2>There {{#ifeq totalPages 1}}is 1 page{{else}}are {{totalPages}} pages{{/ifeq}} in this category.</h2>
        {{#each posts}}
            {{> home/post-simple }}
        {{/each}}
    </section>
    {{> home/pagination currentPage=currentPage totalPages=totalPages path=paginationPath}}
</div>
